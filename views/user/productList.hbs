<div class="container" style="margin-top: 20px;min-height:45vh">
    <h2 class="product-title text-center m-4">All Proucts</h2>
    <div class="row">
        {{#if products}}
        {{#each products}}
        <div class="col-sm-3" style="margin-left: 0px; height: 500px">
            <div class="card" style="width: 15rem; height:max-content">
                <img src="/images/product/{{_id}}.jpg" class="card-img-top" alt="...">
                <div class="card-body text-center">
                    <h6 class="card-title"><b>Product from:</b>{{place}}</h6>
                    <h6 class="card-title">{{productName}}</h6>
                    <h5 class="card-title"><b><i>{{this.Product_name}}</i></b> </h5>
                    <p class="card-text">{{description}} ksjfkhss
                        khjfbjkh
                        kjdf s
                    </p>
                    <p class="card-text">â‚¹{{price}}</p>
                </div>
                <div class="bottom text-center">
                    <a href="/users/addtoCart/{{this.id}}" class="btn btn-warning">Add to Cart</a>
                    <a href="/users/buynow/{{this.id}}/{{this.Price}}/1/{{this.sellerID}}" class="btn btn-success">Buy
                        Now</a>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <h2 class="mt-4 text-center">OOps..... No Products found !!!</h2>
        {{/if}}
    </div>
</div>


<section class="footer bg-dark mt-5 text-light" style="height:30vh">
    <div class="footer-wrapper">
        <h2 class="footer-title text-center pt-3">
            CONTACT US
        </h2>
        <div class="icons-group d-flex justify-content-center mt-5">
            <i class="fa-solid fa-envelope me-5 fa-3x" class="footer-icon"></i>
            <i class="fa-brands fa-twitter me-5 fa-3x" class="footer-icon"></i>
            <i class="fa-brands fa-facebook fa-3x" class="footer-icon"></i>
        </div>
    </div>
